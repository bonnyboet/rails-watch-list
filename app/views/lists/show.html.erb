

<h2><%= @list.name %></h2>
<ul>

  <% @bookmarks.each do |bookmark| %>
  <% movie = Movie.find(bookmark.movie_id)%>
  <li><%= bookmark.comment %></li>
  <li><%= movie.title %></li>
  <%= link_to "Delete", list_bookmark_path(@list, bookmark),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>

<div class="card">
  <%= link_to '+ NEW BOOKMARK', new_list_bookmark_path(@list) %>
</div>
<div class="card">
  <%= link_to 'Back to list', lists_path(@list) %>
</div>
